FIXR_PRIMARY.ENV="local"

FIXR_SERVER.PORT="8080"
FIXR_SERVER.READ_TIMEOUT="30"
FIXR_SERVER.WRITE_TIMEOUT="30"
FIXR_SERVER.IDLE_TIMEOUT="60"
FIXR_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

FIXR_DATABASE.HOST="localhost"
FIXR_DATABASE.PORT="5432"
FIXR_DATABASE.USER="postgres"
FIXR_DATABASE.PASSWORD=""
FIXR_DATABASE.NAME="fixr"
FIXR_DATABASE.SSL_MODE="disable"
FIXR_DATABASE.MAX_OPEN_CONNS="25"
FIXR_DATABASE.MAX_IDLE_CONNS="25"
FIXR_DATABASE.CONN_MAX_LIFETIME="300"
FIXR_DATABASE.CONN_MAX_IDLE_TIME="300"

FIXR_AUTH.SECRET_KEY="secret"

FIXR_INTEGRATION.RESEND_API_KEY="resend_key"

FIXR_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
FIXR_OBSERVABILITY.SERVICE_NAME="fixr"
FIXR_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
FIXR_OBSERVABILITY.LOGGING.LEVEL="debug"
FIXR_OBSERVABILITY.LOGGING.FORMAT="console"
FIXR_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
FIXR_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
FIXR_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
FIXR_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
FIXR_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
FIXR_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
FIXR_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
FIXR_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
FIXR_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"